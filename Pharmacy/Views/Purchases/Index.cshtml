@model IEnumerable<Pharmacy.Models.Purchase>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (Model.Count() > 0) {

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PurchaseTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pharmacist)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalNoProducts)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalCost)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
                <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pharmacist.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalNoProducts)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">
                            Edit <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn = btn-primary">
                            Details <i class="bi bi-info-square-fill"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            Delete <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
            </tr>
    }
        </tbody>
    </table>
}

else
{
    <h1 class=" alert alert-danger text-center ">
        There is no data.
    </h1>
}

<br />
<a class="btn btn-primary" asp-controller="Home"
   asp-action="Index">
    back to home
</a>
